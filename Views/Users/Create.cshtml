@model addUserViewModel

<h2 style="margin-left: 32px;">Add User</h2>
<div class="containerOne my-5">
    <div class="task-form-container">
        <form asp-action="AddUser" asp-controller="Users" method="post" class=" task-form">
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="FullName"></label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter Full Name" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter Email" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>                   
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PasswordHash"></label>
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Enter Password" required />
                        <span asp-validation-for="PasswordHash" class="text-danger"></span>
                    </div>                   
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Contact"></label>
                        <input asp-for="Contact" class="form-control" placeholder="Enter Contact Number" required />
                        <span asp-validation-for="Contact" class="text-danger"></span>
                    </div>                  
                </div>


                <div class="col-md-6">
                    <div class="form-group">
                         <label asp-for="Role"></label>
                    <select asp-for="Role" asp-items="Model.RoleList" class="form-control" required>
                        <option value="">Select Role</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                    </div>
                   
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="userId">Reporting Person</label>
                        <select asp-for="userId" asp-items="Model.ReportingPersonList" class="form-control" required>
                            <option value="">-- Select Reporting Person --</option>
                        </select>
                        <span asp-validation-for="userId" class="text-danger"></span>
                    </div>

                </div>


                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Responsibilities"></label>
                        <select asp-for="Responsibilities" asp-items="Model.Responsibilitieslist" class="form-control" required>
                            <option value="">Select Responsibilities</option>
                        </select>
                        <span asp-validation-for="Responsibilities" class="text-danger"></span>
                    </div>
                    
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
   
    </div>
</div>




<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
